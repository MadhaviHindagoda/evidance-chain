# ─────────────────────────────────────────────────────────
# EvidenceChain Backend — Environment Variables
# Copy this file to .env and fill in your values
# ─────────────────────────────────────────────────────────

PORT=5000
NODE_ENV=development

# Ganache RPC URL
BLOCKCHAIN_RPC_URL=http://127.0.0.1:7545

# Deployed contract address (fill after: truffle migrate)
CONTRACT_ADDRESS=0xYourContractAddressHere

# Ganache account private key (copy from Ganache → Accounts tab → key icon)
DEPLOYER_PRIVATE_KEY=0xYourPrivateKeyHere

# File upload limits
MAX_FILE_SIZE_MB=50
UPLOAD_DIR=./uploads

# CORS — frontend origin
FRONTEND_URL=http://localhost:3000

# Optional: Pinata IPFS (get keys at pinata.cloud)
PINATA_API_KEY=
PINATA_SECRET_KEY=
