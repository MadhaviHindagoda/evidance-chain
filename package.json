{
  "name": "evidence-chain",
  "version": "1.0.0",
  "description": "Secure Digital Evidence Management Using Blockchain",
  "private": true,
  "scripts": {
    "truffle:migrate": "truffle migrate --reset",
    "truffle:test":    "truffle test",
